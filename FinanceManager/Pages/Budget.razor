@page "/budget"
@using FinanceManager.Application.Common.Enums


    <h3>Budget</h3>

    <div class="container">
        <div class="row">

            <div class="col">
                <h1>Expenses</h1>
                <BudgetStatisticTableBase
                    Items="@BudgetStatisticVm?.StatisticItems.Where(x => x.TransactionType == TransactionType.Cunsumption.ToString()).ToList()">
                </BudgetStatisticTableBase>
            </div>

            <div class="col">
                <h1>Incomes</h1>
                <BudgetStatisticTableBase
                    Items="@BudgetStatisticVm?.StatisticItems.Where(x => x.TransactionType == TransactionType.Income.ToString()).ToList()">
                </BudgetStatisticTableBase>
            </div>

        </div>
    </div>